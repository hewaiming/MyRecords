<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_actionbar_bg"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_back"
            android:layout_width="32dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"         
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_back_selector"
            android:textColor="@color/color_bottom_text_press" />

        <EditText
            android:id="@+id/et_find"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_margin="10dp"
            android:layout_weight="1.0"
            android:background="@drawable/button_normal_shape"
            android:hint="@string/search_hint"         
            android:singleLine="true"
            android:textColorHint="#b3b3b3"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_search"
            style="@style/Smile.TextView._White"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"                    
            android:background="@drawable/btn_login_selector"
            android:text="@string/search_btn_text"
            android:textSize="14sp" />
    </LinearLayout>

    <com.hewaiming.MyRecords.view.xListView
        android:id="@+id/lv_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@drawable/base_horizontal_line"
        android:dividerHeight="1dp"
        android:fadingEdgeLength="0dp"
        android:fastScrollEnabled="true"
        android:paddingBottom="10dp" >
    </com.hewaiming.MyRecords.view.xListView>

</LinearLayout>